{
  "name": "mejohnc-org",
  "private": true,
  "version": "3.0.0",
  "description": "Personal portfolio and admin platform for Jonathan Christensen",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/MeJohnC/MeJohnC.Org.git"
  },
  "author": "Jonathan Christensen <contact@mejohnc.org>",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "node scripts/generate-sitemap.js && vite build",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "analyze": "vite build --mode analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lighthouse": "lhci autorun",
    "prepare": "husky || true",
    "version": "node scripts/update-changelog.js && git add CHANGELOG.md",
    "release": "npm version",
    "release:patch": "npm version patch -m 'chore(release): %s'",
    "release:minor": "npm version minor -m 'chore(release): %s'",
    "release:major": "npm version major -m 'chore(release): %s'",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset",
    "db:status": "supabase db status",
    "db:new": "supabase migration new",
    "netlify:dev": "netlify dev",
    "netlify:env": "netlify env:list"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.61.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@json-render/core": "^0.11.0",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/react": "^10.40.0",
    "@supabase/supabase-js": "^2.98.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "framer-motion": "^12.34.3",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.576.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-is": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.13.1",
    "recharts": "^3.7.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "stripe": "^20.4.0",
    "tailwind-merge": "^3.5.0",
    "tailwindcss-animate": "^1.0.7",
    "web-vitals": "^5.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.3.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.27",
    "eslint": "^10.0.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.4.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^15.4.3",
    "netlify-cli": "^23.15.1",
    "playwright": "^1.58.2",
    "postcss": "^8.4.35",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^7.0.0",
    "supabase": "^2.76.15",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^5.4.2",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "eslint-plugin-react-hooks": {
      "eslint": "$eslint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write --ignore-unknown"
    ]
  }
}
